<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
        integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <title>Study Modules</title>
</head>

<body style="background-color: #2A2F42;">
    <div class="container-fluid">
        <a style="border-radius: 0; border: 0; margin-top: 15px; background-color: #208EC9; color: white;"
            class="btn pull-left" href="/adminpanel" role="button"><i class="fas fa-chevron-left"></i> <i
                class="fas fa-cogs"></i> Admin Panel</a>
        <a style="border-radius: 0; border: 0; margin-top: 15px; background-color: #208EC9; color: white;"
            class="btn float-right" href="/logout" role="button"> <i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col" style="background-color: #208EC9; margin-top: 25px; padding: 20px;">
                <h3><a class="btn" style="border-radius: 0; background-color: #2A2F42; color: white;" href="/form"><i
                            class="far fa-plus-square"></i> Add New Module</a> <a class="btn"
                        style="border-radius: 0; background-color: #2A2F42; color: white;" href="/modulesadd"><i
                            class="far fa-plus-square"></i> Upload Module File</a> Study Modules </h3>
                <table class="table table-striped" style="color: #2A2F42;">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Study Programme</th>
                            <th>Subgroup</th>
                            <th>Title</th>
                            <th>Start</th>
                            <th>End</th>
                            <th>Classroom</th>
                            <th>Type</th>
                            <th>Weekday</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% modules.forEach(function(item){ %>
                        <td><%= item.id %></td>
                        <td><%= item.studyProgramme %></td>
                        <td><%= item.subgroup %></td>
                        <td><%= item.title %></td>
                        <td><%= item.start %></td>
                        <td><%= item.end%></td>
                        <td><%= item.classroom %></td>
                        <td><%= item.type %></td>
                        <td><%= item.weekday %></td>
                        <td>
                            <a style="color: #2A2F42;" href="/edit?id=<%= item.id %>"><i class="far fa-edit"
                                    aria-hidden="true"></i></a>
                        </td>
                        <td>
                            <a style="color: #2A2F42;" href="/delete?id=<%= item.id %>"
                                onclick="return confirm('Are You Sure You Want to Delete this Module?');"><i
                                    class="far fa-trash-alt" aria-hidden="true"></i></a>
                        </td>
                        </tr>
                        <% }); %>
                    </tbody>
            </div>
        </div>
    </div>
</body>

</html>